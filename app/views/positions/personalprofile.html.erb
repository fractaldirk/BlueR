<body class="redie">
<p id="notice"></p>
<p class="hrpicture"><%= link_to image_tag(@position.picture + ".png", :border=>4) %></p>

<p>
  <b>Name:</b>
  <%= @position.name %>
</p>

<p>
  <b>Date of Birth:</b>
  <%= @position.date_birth %>
</p>

<p>
  <b>Gender:</b>
  <%= @position.gender_string %>
</p>

<p>
  <b>Nationality:</b>
  <%= @position.nationality_string %>
</p>

<p>
  <b>Residential Status:</b>
  <%= @position.residential_status_string %>
</p>

<p>
  <b>Personal Development Notes:</b>
  <%= simple_format @position.personal_development %>
</p>



