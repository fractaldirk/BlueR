<%= form_for(@position) do |f| %>
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% @position.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	  <%= f.label :name %><br />
	  <%= f.text_field :name %>
  </div>

	<div class="field">
	  <%= f.label :date_birth, "Date of Birth" %><br />
	  <%= f.date_select(:date_birth, :order => [:day, :month, :year], :start_year => 1930, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }) %>
	</div>

	<div class="field">
	  <%= f.label :gender_string, "Gender" %><br />
	  <%= f.select(:gender_string, [['Female', 'Female'], ['Male', 'Male']], :prompt => 'Please select') %>
	</div>

	<div class="field">
	  <%= f.label :nationality_string, "Nationality" %><br />
	  <%= f.select(:nationality_string, [['Dutch', 'Dutch'], ['German', 'German']], :prompt => 'Please select') %>
	</div>

	<div class="field">
	  <%= f.label :residential_status_string, "Visa status" %><br />
	  <%= f.select(:residential_status_string, [['Permanent Residence Status', 'Permanent Residence Status'], ['Visa', 'Visa']], :prompt => 'Please select') %>
	</div>

	<div class="field">
	  <%= f.label :start_date, "Start Date (of employement)" %><br />
	  <%= f.date_select(:start_date, :order => [:day, :month, :year], :start_year => 1972, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }) %>
	</div>
<hr />
<p><i>This is a <span><b><%= @position.permanent_outcome %></b></span> position for <span><b><%= @position.fte %></b></span> FTE</i></p>

	<div>
	  <%= f.label :type_contract, "Type of contract" %>
	  <%= f.select(:type_contract, [['Flexible'], ['1 year fixed'], ['Indefinite fixed']], :prompt => 'Contract') %>
	</div>
<hr />
  <h4>Personal Development (Notes)</h4>
  <div>
	  <%= f.label :personal_development, "Personal Development Notes" %><br />
	  <%= f.text_area :personal_development, :style => "width: 600pt;" "height: 250pt;" %>
	</div>

  <div class="actions">
   <%= f.submit "Save Personal Profile", :name => "personal_profile_button", :class => 'btn btn-success', :id => 'submit_button' %>
  </div>
<% end %>
