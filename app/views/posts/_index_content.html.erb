<h1>Knowledge Center</h1>
<br />
  <%= link_to 'New Post', new_post_path %>
<br />
<br />
<table class="table"">
  <tr>
    <th>Idea title</th>
    <th>Participants..</th>
    <th>Created at</th>
    <th>Action:</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.idea_title, post %> (<%= post.comments.count %>)</td>
    <td>creator name + participants names</td>
    <td><%= post.created_at.strftime("%d %B %Y") %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
</table>
<% end %>
