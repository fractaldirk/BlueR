<p id="notice"></p>

<div class="span1">
</div>

<div class="span10">

    <h1 style="color: black"><%= @post.idea_title %> (<%= @post.comments.count %>)</h1>
    <h5>(<%= @post.idea_name %>)</h5>

  <hr />

  <%= render 'projects/participants' %>

  <%= render 'projects/form' %>

  <p>
    <%= simple_format @post.idea_body %>
  </p>
  <hr />

  <% unless @post.comments.empty? %>
    <h2><%= pluralize(@post.comments.size, 'comment') %></h2>
  <hr />
  <div id="comments">
    <%= render @post.comments %>
  </div>

  <% end %>

  <h6>Add a comment:</h6>
  <%= render "comments/form" %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>

<div class="span1">
</div>
