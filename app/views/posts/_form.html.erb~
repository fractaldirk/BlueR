<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :idea_title %><br />
    <%= f.text_field :idea_title %>
  </div>
  <div class="field">
    <%= f.label :idea_name %><br />
    <%= f.text_field :idea_name %>
  </div>
  <div class="field">
    <%= f.label :idea_body %><br />
    <%= f.text_area :idea_body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
