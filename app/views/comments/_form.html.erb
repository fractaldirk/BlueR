<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.hidden_field :idea_commenter, :value => commenter %>
    <%= f.text_area :idea_comment, :style => "width: 600pt; height: 150pt;" %>
  </div>
  <div class="actions">
    <%= f.submit "Post my comment", :class => "btn btn-success" %>
  </div>
<% end %>
