<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :idea_commenter, "Name" %><br />
    <%= f.text_field :idea_commenter %>
  </div>
  <div class="field">
    <%= f.label :idea_comment, "Comment/Idea" %><br />
    <%= f.text_area :idea_comment, :style => "width: 600pt; height: 150pt;" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
